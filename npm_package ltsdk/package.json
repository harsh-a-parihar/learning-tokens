{
  "name": "ltsdk",
  "version": "1.0.9",
  "description": "Learning Tokens SDK (LMS Connector) - Unified connector for LMS (Canvas, edX, Moodle, Google Classroom) to learning tokens platform",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist",
    "local-server",
    "frontend/src",
    "frontend/public",
    "frontend/package.json",
    "frontend/.env.example",
    "frontend/README.md",
    "env.example",
    "README.md",
    "bin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperledger-labs/learning-tokens"
  },
  "bin": {
    "ltsdk": "./bin/ltsdk.js"
  },
  "scripts": {
  "clean": "rm -rf dist",
  "build": "npm run clean && tsc",
  "build:frontend": "cd frontend && npm run build",
  "test": "jest",
  "smoke": "jest --testPathPattern=tests/smoke --runInBand",
  "dev-server": "PORT=5001 node -r dotenv/config local-server/server.js",
  "dev-auth": "LTSDK_AUTH_PORT=5002 node local-server/auth/auth-server.js",
  "dev:frontend": "cd frontend && npm start",
  "start": "npm run dev:all:auth",
  "dev:all:auth": "concurrently \"npm run dev-server\" \"npm run dev-auth\" \"npm run dev:frontend\"",
  "install:frontend": "cd frontend && npm install",
  "postinstall": "cd frontend && npm install",
  "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "lms",
    "learning-management-system",
    "canvas",
    "edx",
    "moodle",
    "google-classroom",
    "education",
    "learning-tokens",
    "edtech",
    "ltsdk"
  ],
  "author": "Harsh Jain, Harsh Parihar",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.9.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.7.7",
    "dotenv": "^17.0.1",
    "minimist": "^1.2.8"
  }
}
