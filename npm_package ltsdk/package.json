{
  "name": "ltsdk",
  "version": "1.0.5",
  "description": "Learning Tokens SDK - Unified connector for LMS (Canvas, edX, Moodle, Google Classroom)",
  "main": "dist/src/index.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types",
    "local-server",
    "frontend/src",
    "frontend/public",
    "frontend/package.json",
    "frontend/.env.example",
    "frontend/README.md",
    "env.example",
    "README.md",
    "README-SDK.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/harsh-a-parihar/learning-tokens.git"
  },
  "bugs": {
    "url": "https://github.com/harsh-a-parihar/learning-tokens/issues"
  },
  "homepage": "https://github.com/harsh-a-parihar/learning-tokens#readme",
  "scripts": {
  "clean": "rm -rf dist",
  "build": "npm run clean && tsc",
  "build:frontend": "cd frontend && npm run build",
  "test": "jest",
  "smoke": "jest --testPathPattern=tests/smoke --runInBand",
  "dev-server": "PORT=5001 node -r dotenv/config local-server/server.js",
  "dev:frontend": "cd frontend && npm start",
  "dev:all": "concurrently \"npm run dev-server\" \"npm run dev:frontend\"",
  "install:frontend": "cd frontend && npm install"
  },
  "keywords": [
    "lms",
    "learning-management-system",
    "canvas",
    "edx",
    "moodle",
    "google-classroom",
    "education",
    "learning-tokens",
    "blockchain",
    "edtech"
  ],
  "author": "Harsh Jain",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.9.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.7.7",
    "dotenv": "^17.0.1",
    "minimist": "^1.2.8"
  }
}
